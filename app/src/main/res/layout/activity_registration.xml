<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registration_sv_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingVertical="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto"
            android:text="Register With Us"
            android:textColor="@color/darkGrey"
            android:textSize="16dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/edittext_bg"
            android:drawableLeft="@drawable/ic_user"
            android:drawablePadding="16dp"
            android:fontFamily="@font/roboto"
            android:hint="First Name"
            android:minHeight="44dp"
            android:paddingVertical="4dp"
            android:paddingLeft="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/roboto"
            android:text="You will be call by this name"
            android:textColor="@color/darkGrey"
            android:textSize="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edittext_bg"
            android:drawableLeft="@drawable/ic_user"
            android:drawablePadding="16dp"
            android:fontFamily="@font/roboto"
            android:hint="Last Name"
            android:minHeight="44dp"
            android:paddingVertical="10dp"
            android:paddingLeft="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/roboto"
            android:text="You will be call by this name"
            android:textColor="@color/darkGrey"
            android:textSize="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edittext_bg"
            android:drawableLeft="@drawable/ic_mobile"
            android:drawablePadding="16dp"
            android:fontFamily="@font/roboto_medium"
            android:hint="Mobile Number"
            android:inputType="number"
            android:maxLength="10"
            android:minHeight="44dp"
            android:paddingVertical="10dp"
            android:paddingLeft="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="4dp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/roboto"
            android:text="@string/mobile_constraints"
            android:textColor="@color/darkGrey"
            android:textSize="10dp" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/edittext_bg"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="16dp"
            android:fontFamily="@font/roboto"
            android:hint="Password"
            android:inputType="textPassword"
            android:minHeight="44dp"
            android:paddingVertical="10dp"
            android:paddingLeft="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_gravity="left"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="4dp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/roboto"
            android:text="@string/mobile_constraints"
            android:textColor="@color/darkGrey"
            android:textSize="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/edittext_bg"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="16dp"
            android:fontFamily="@font/roboto"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:minHeight="44dp"
            android:paddingVertical="10dp"
            android:paddingLeft="16dp" />


        <Button
            android:id="@+id/activity_registration_btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="46dp"
            android:background="@drawable/button_bg"
            android:text="REGISTER"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="34dp"
            android:background="@color/lightBlack" />

        <TextView
            android:id="@+id/activity_registration_tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/roboto_bold"
            android:text="ALREADY A USER? LOGIN"
            android:textColor="@color/darkGrey"
            android:textSize="18sp" />

    </LinearLayout>
</ScrollView>